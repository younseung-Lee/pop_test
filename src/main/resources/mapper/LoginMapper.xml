<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.pop.mapper.LoginMapper">

    <!-- 로그인: users 테이블 → MartIpVO 매핑 -->
    <select id="findByIdAndPw"
            parameterType="map"
            resultType="com.example.pop.vo.MartIpVO">
        SELECT
            mart_cd    AS id,
            user_nm    AS nm,
            user_id    AS sep_pwd,
            user_auth  AS gr
        FROM am_mart.users
        WHERE user_id = #{id}

          AND user_pwd = #{pw}
          AND used_yn = 'Y'
            LIMIT 1
    </select>
    

    <!-- 아이디로 마트 IP 조회 (기존 로직 유지) -->
    <select id="findById" resultType="com.example.pop.vo.MartIpVO">
        SELECT id, pw
        FROM am_mart.mart_ip
        WHERE id = #{id}
            LIMIT 1
    </select>
    

    
</mapper>
